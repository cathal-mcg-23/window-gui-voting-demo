<Window x:Class="s20_project.ImageWindow"
        Name="win1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:s20_project"
        mc:Ignorable="d"
        
        WindowStyle = "None"
        AllowsTransparency = "True"
        
        Title="ImageWindow"  Loaded="Window_Loaded" Background="#00000000" MouseDown="win1_MouseDown" >
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <Image x:Name="img1" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        
    </Grid>
</Window>
